{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "plugins": ["react", "react-hooks", "next"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended", "next"],
  "rules": {
    "no-console": "warn", // disallow the use of console.log, console.error, etc. (show a warning)
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // disallow unused variables (show an error), but allow variables starting with an underscore
    "react/prop-types": "off" // disable prop-types validation for React components
  }
}
